extends layout

block content
  h1= title
  p No.of Rows = #{query.rows} and N0.of columns =  #{query.cols}
  - var rows = Number(query.rows) 
  - var cols = Number(query.cols)
  - if(!Number.isInteger(rows)) {
      p Row value entered is not an integer
  - }
  - else if(!Number.isInteger(Number(cols))) {
      p Column value entered is not an integer
  - }
  - else if (!(rows >= 1 && rows <= 10)) {
      p Number of rows ranges from 1 to 10
  - }
  - else if (!(cols >= 1 && cols <= 10)) {
      p Number of columns ranges from 1 to 10
  - }
  - else {
        table#outer
            - for(let i = 0; i < rows; i++) {
                tr#middle 
                    - for(let j = 0; j < cols; j++) {
                        td= (1 + i + j * rows)
                    - }
            - }
  - }